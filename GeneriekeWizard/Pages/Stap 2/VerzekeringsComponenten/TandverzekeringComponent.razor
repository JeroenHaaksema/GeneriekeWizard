<div class="row">
    Kies een aanvullende verzekering
</div>
<div class="row">
    @foreach (var verzekeringsTekst in tandverzekeringsTeksten)
    {
    <div class="col-4">
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">@verzekeringsTekst.naam</h5>
                <p class="card-text">@verzekeringsTekst.tekst</p>
                <p>Prijs: €@verzekeringsTekst.prijs </p>
            </div>
        </div>


        @foreach (var volwassene in @gezinssamenstellingState.Value.personen.Where(x => !x.IsKind()))
        {


            @if (Geselecteerd(volwassene.id, verzekeringsTekst.id))
            {
                <button class="btn btn-danger" @onclick="() => DeleteTandVerzekering(volwassene.id)">Verwijder voor: @volwassene.GetPersoonsType()</button>
            }
            else
            {
                <button class="btn btn-info" @onclick="() => SelectTandVerzekering(volwassene.id, verzekeringsTekst.id)">Selecteer pakket voor: @volwassene.GetPersoonsType()</button>
            }
        }

    </div>
    }
</div>